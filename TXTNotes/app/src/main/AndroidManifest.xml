<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="barilyuk.writeintxt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name="barilyuk.writeintxt.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="barilyuk.writeintxt.EditActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="file" />
                <data android:scheme="content" />
                <data android:mimeType="text/*" />
            </intent-filter>
            <!-- Markdown -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/markdown" />
                <data android:mimeType="text/x-markdown" />
                <data android:mimeType="application/octet-stream" />
                <data android:pathPattern=".*\\.md" />
                <data android:pathPattern=".*\\.markdown" />
            </intent-filter>

            <!-- Config files: INI, CFG, CONF, PROPERTIES, TOML -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="application/octet-stream" />

                <data android:pathPattern=".*\\.ini" />
                <data android:pathPattern=".*\\.cfg" />
                <data android:pathPattern=".*\\.conf" />
                <data android:pathPattern=".*\\.properties" />

                <!-- TOML specific -->
                <data android:mimeType="application/toml" />
                <data android:pathPattern=".*\\.toml" />
            </intent-filter>

            <!-- YAML -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/x-yaml" />
                <data android:mimeType="text/yaml" />
                <data android:mimeType="application/octet-stream" />
                <data android:pathPattern=".*\\.yaml" />
                <data android:pathPattern=".*\\.yml" />
            </intent-filter>

            <!-- reStructuredText -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/x-rst" />
                <data android:mimeType="application/octet-stream" />
                <data android:pathPattern=".*\\.rst" />
            </intent-filter>

            <!-- Logs -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="application/octet-stream" />
                <data android:pathPattern=".*\\.log" />
                <data android:pathPattern=".*\\.out" />
            </intent-filter>

            <!-- Structured Data: JSON, XML, CSV, HTML -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <!-- JSON -->
                <data android:mimeType="application/json" />
                <data android:mimeType="text/json" />
                <data android:pathPattern=".*\\.json" />

                <!-- XML -->
                <data android:mimeType="text/xml" />
                <data android:mimeType="application/xml" />
                <data android:pathPattern=".*\\.xml" />

                <!-- CSV -->
                <data android:mimeType="text/csv" />
                <data android:mimeType="application/vnd.ms-excel" />
                <data android:pathPattern=".*\\.csv" />

                <!-- HTML -->
                <data android:mimeType="text/html" />
                <data android:mimeType="application/xhtml+xml" />
                <data android:pathPattern=".*\\.html" />
                <data android:pathPattern=".*\\.htm" />

                <!-- fallback -->
                <data android:mimeType="application/octet-stream" />
            </intent-filter>
        </activity>

    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest>